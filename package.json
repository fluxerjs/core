{
  "name": "fluxer-core-monorepo",
  "version": "1.2.0",
  "private": true,
  "license": "Apache-2.0",
  "description": "@fluxerjs SDK monorepo",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint --filter=!@fluxerjs/docs",
    "lint:fix": "turbo run lint:fix --filter=!@fluxerjs/docs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:coverage": "vitest run --coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "generate:types": "pnpm exec tsx scripts/generate-types.ts",
    "generate:emoji": "pnpm exec tsx scripts/generate-emoji-shortcodes.ts",
    "generate:docs": "pnpm exec tsx scripts/generate-docs.ts",
    "docs:generate": "pnpm run build && pnpm run generate:docs",
    "docs:dev": "pnpm --filter @fluxerjs/docs dev",
    "docs:build": "pnpm run build && pnpm run generate:docs && pnpm --filter @fluxerjs/docs build",
    "docs:preview": "pnpm --filter @fluxerjs/docs preview",
    "docs:deploy": "pnpm run docs:build && wrangler deploy",
    "publish:packages": "node scripts/publish-ordered.js",
    "publish:packages:all": "pnpm run build && pnpm -r publish --no-git-checks --filter '!./examples'"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.8.0",
    "globals": "^17.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "tsx": "^4.19.0",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18",
    "vue-eslint-parser": "^10.4.0",
    "wrangler": "^4.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.7"
    }
  }
}
