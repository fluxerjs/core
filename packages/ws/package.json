{
  "name": "@fluxerjs/ws",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.2.0",
  "description": "WebSocket manager for the Fluxer Gateway",
  "repository": {
    "type": "git",
    "url": "https://github.com/fluxerjs/core.git",
    "directory": "packages/ws"
  },
  "bugs": "https://github.com/fluxerjs/core/issues",
  "homepage": "https://fluxerjs.blstmo.com",
  "keywords": [
    "fluxer",
    "websocket",
    "gateway",
    "sdk"
  ],
  "license": "Apache-2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "clean": "rm -rf dist",
    "lint": "eslint src --max-warnings 0 --config ../../eslint.config.js",
    "lint:fix": "eslint src --fix --config ../../eslint.config.js",
    "test": "vitest run --passWithNoTests",
    "test:coverage": "vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@fluxerjs/types": "workspace:*",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0"
  }
}
