{
  "name": "@fluxerjs/util",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.2.0",
  "description": "Shared utilities for @fluxerjs/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/fluxerjs/core.git",
    "directory": "packages/util"
  },
  "bugs": "https://github.com/fluxerjs/core/issues",
  "homepage": "https://fluxerjs.blstmo.com",
  "keywords": [
    "fluxer",
    "util",
    "snowflake",
    "bitfield"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "@fluxerjs/types": "workspace:*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm exec tsx ../../scripts/generate-emoji-shortcodes.ts && tsup src/index.ts --format cjs,esm --dts",
    "clean": "rm -rf dist",
    "lint": "eslint src --max-warnings 0 --config ../../eslint.config.js",
    "lint:fix": "eslint src --fix --config ../../eslint.config.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "vitest": "^4.0.18"
  }
}
