{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "dependsOn": ["build"]
    },
    "lint": {},
    "clean": {
      "cache": false
    },
    "generate:docs": {
      "dependsOn": ["build"],
      "outputs": ["apps/docs/public/docs/**"]
    }
  }
}
